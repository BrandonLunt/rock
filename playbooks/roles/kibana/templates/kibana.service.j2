[Unit]
 Description = Kibana Container Service
 
 Wants    = network.target
 Requires = docker.service
 
 [Service]
 Type = simple
 
 ExecStartPre = /usr/sbin/iptables -I INPUT 1 -p tcp --dport {{ kibana_port }} -j ACCEPT
 ExecStart = /usr/bin/docker-compose -f {{ rocknsm_dir }}/kibana/kibana-compose.yml up
 
 ExecStop  = /usr/bin/docker-compose -f {{ rocknsm_dir }}/kibana/kibana-compose.yml down -v
 ExecStop = /usr/sbin/iptables -D INPUT -p tcp --dport {{ kibana_port }} -j ACCEPT
 
 [Install]
 WantedBy = multi-user.target
